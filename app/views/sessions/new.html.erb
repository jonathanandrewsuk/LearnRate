<h1>Login</h1>

<p><strong><font color="#ff0000"><%= flash[:notice] %></font></strong></p>

<%= form_tag :sessions do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Log In" %>
<% end %>

<%= link_to "Or sign up", new_user_path %>
