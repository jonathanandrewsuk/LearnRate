<h1>Help Other Users</h1>
<p><strong><font color="#ff0000"><%= flash[:notice] %></font></strong></p>

<table class="table table-striped">

  <tr>
    <% help_count =  Tag.all.count { |tag| tag.progress == "Need Help" } %>
    <% if help_count == 1 %>
      <th colspan="5" bgcolor="FFAAAA">There is currently 1 request for help</th>
    <% else %>
      <th colspan="5" bgcolor="FFAAAA">There are currently <%= help_count %> requests for help</th>
    <% end %>
  </tr>
  <tr>
    <th>Username</th>
    <th>Lesson Name</th>
    <th colspan="3">Location</th>
  </tr>

  <% @tags.each do |tag| %>
  <% location = tag.review.lesson.unit_location.split("-") %>

    <% if tag.progress == "Need Help" %>

      <tr>
       <td rowspan="2"><%= link_to tag.review.user.username, user_path(tag.review.user) %></td>
       <td rowspan="2"><%= link_to tag.review.lesson.name, lesson_path(tag.review.lesson) %></td>
       <td colspan="3">Module <%= location[0] %></td>
      </tr>
      <tr>
        <td><%= location[1] %></td>
        <td><%= location[2] %></td>
        <td><%= location[3] %></td>
      </tr>

    <% end %>
  <% end %>
</table>

<table class="table table-striped">

